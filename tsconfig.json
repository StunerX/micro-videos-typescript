{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "rootDirs": ["./src"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules/*", "dist"]
}
